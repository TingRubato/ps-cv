<script src="{{ '/assets/js/chart/quad-splitting.js' | relative_url }}" defer></script>
<script>
  // Use cache-busting if enabled
  const imagePath = "{{ 'assets/img/photo.png' | relative_url}}{% if cache_bust %}?{{ site.time | date: '%s' }}{% endif %}";
  // Initialize the quad-splitting animation
  initQuadSplitting(imagePath, '#quad-canvas');
</script>
